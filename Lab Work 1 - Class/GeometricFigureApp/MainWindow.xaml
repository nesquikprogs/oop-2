<Window x:Class="Rectangle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Прямоугольник" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Ввод параметров -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <StackPanel Margin="0,0,20,0">
                <TextBlock Text="A (ширина):"/>
                <TextBox x:Name="txtA" Width="80" Text="120"/>
            </StackPanel>
            <StackPanel Margin="0,0,20,0">
                <TextBlock Text="B (высота):"/>
                <TextBox x:Name="txtB" Width="80" Text="80"/>
            </StackPanel>
            <StackPanel Margin="0,0,20,0">
                <TextBlock Text="X:"/>
                <TextBox x:Name="txtX" Width="80" Text="50"/>
            </StackPanel>
            <StackPanel Margin="0,0,20,0">
                <TextBlock Text="Y:"/>
                <TextBox x:Name="txtY" Width="80" Text="50"/>
            </StackPanel>
            <Button x:Name="btnCreate" Content="Создать" Width="100" Margin="10,0,0,0" Click="btnCreate_Click"/>
        </StackPanel>

        <!-- Canvas с фигурой -->
        <Canvas Grid.Row="1" Background="#F0F0F0" x:Name="canvas">
            <Rectangle x:Name="rect" Height="2" Canvas.Left="-68" Canvas.Top="26" Width="2" Fill="#FF9400FF" Stroke="Black"/>
        </Canvas>

        <!-- Инфо -->
        <TextBlock Grid.Row="2" x:Name="txtInfo" FontSize="14" Margin="0,10,0,0" Text="Создайте фигуру"/>
    </Grid>
</Window>