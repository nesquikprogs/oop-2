<Window x:Class="DatabaseLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}"
        Height="520" Width="900"
        FontFamily="Segoe UI" FontSize="14"
        Background="#F9FAFB"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Меню -->
            <RowDefinition Height="Auto"/>
            <!-- Выбор файла -->
            <RowDefinition Height="Auto"/>
            <!-- Ввод -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Поиск и сортировка -->
        </Grid.RowDefinitions>

        <!-- Меню -->
        <Menu Grid.Row="0" Margin="0,0,0,12">
            
            
            <MenuItem Header="Файл">
                <MenuItem Header="Выбрать файл" Click="SelectFile_Click"/>
                <MenuItem Header="Создать новый файл" Click="CreateNewFile_Click"/>
            </MenuItem>
            <MenuItem Header="Сведения">
                <MenuItem Header="О программе" Click="About_Click"/>
                <MenuItem Header="Краткая справка" Click="Help_Click"/>
            </MenuItem>



                
            

        </Menu>

        <!-- Ввод -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,12">

            <!-- Имя -->
            <StackPanel Width="190" Margin="0,0,6,0">
                <Label Content="Имя студента" Foreground="Gray"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" ToolTip="Введите имя студента"/>
            </StackPanel>

            <!-- Возраст -->
            <StackPanel Width="70" Margin="0,0,6,0">
                <Label Content="Возраст" Foreground="Gray"/>
                <TextBox Text="{Binding AgeText, UpdateSourceTrigger=PropertyChanged}" ToolTip="Введите возраст студента (целое число)"/>
            </StackPanel>

            <!-- Оценка -->
            <StackPanel Width="80" Margin="0,0,6,0">
                <Label Content="Оценка" Foreground="Gray"/>
                <TextBox Text="{Binding GradeText, UpdateSourceTrigger=PropertyChanged}" ToolTip="Введите оценку студента (целое число от 2 до 5)"/>
            </StackPanel>

            <!-- Email -->
            <StackPanel Width="210" Margin="0,0,12,0">
                <Label Content="Email (опционально)" Foreground="Gray"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" ToolTip="Введите email студента (опционально)"/>
            </StackPanel>

            <!-- Кнопки -->
            <Button Content="Добавить" Width="85" Margin="0,0,6,0" Background="#3B82F6" Foreground="White" Click="Add_Click" ToolTip="Нажмите, чтобы добавить студента"/>
            <Button Content="Изменить" Width="85" Margin="0,0,6,0" Background="#3B82F6" Foreground="White" Click="Update_Click" ToolTip="Нажмите, чтобы изменить студента"/>
            <Button Content="Удалить" Width="85" Background="#EF4444" Foreground="White" Click="Delete_Click" ToolTip="Нажмите, чтобы удалить студента"/>
        </StackPanel>

        <!-- Таблица -->
        <DataGrid x:Name="dgStudents" Grid.Row="3" Margin="0,0,0,12"
                  ItemsSource="{Binding Students}" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionChanged="dgStudents_SelectionChanged" Background="White"
                  BorderBrush="#D1D5DB" BorderThickness="1"
                  ToolTip="Список всех студентов. Выберите студента для редактирования или удаления.">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Возраст" Binding="{Binding Age}" Width="70"/>
                <DataGridTextColumn Header="Оценка" Binding="{Binding Grade}" Width="70"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Поиск и сортировка -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center">

            <!-- Поиск -->
            <StackPanel Width="220" Margin="0,0,10,0">
                <Label Content="Поиск по имени" Foreground="Gray"/>
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" ToolTip="Введите имя для поиска"/>
            </StackPanel>

            <!-- Кнопки -->
            <Button Content="Поиск" Width="100" Margin="0,0,6,0" Background="#3B82F6" Foreground="White" Click="Search_Click" ToolTip="Поиск студентов по имени"/>
            <Button Content="Сорт. по возрасту" Width="140" Margin="0,0,6,0" Background="#3B82F6" Foreground="White" Click="Sort_Click" ToolTip="Сортировка по возрасту"/>
            <Button Content="Обновить" Width="90" Background="#6B7280" Foreground="White" Click="Refresh_Click" ToolTip="Обновить список студентов"/>
        </StackPanel>

    </Grid>
</Window>
