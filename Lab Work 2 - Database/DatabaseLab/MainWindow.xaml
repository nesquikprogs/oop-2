<Window x:Class="DatabaseLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="База студентов" Height="450" Width="877"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="txtName"   Width="180" Margin="5"/>
            <TextBox x:Name="txtAge"    Width="60"  Margin="5"/>
            <TextBox x:Name="txtGrade"  Width="70"  Margin="5"/>
            <TextBox x:Name="txtEmail"  Width="200" Margin="5"/>
            <Button Content="Добавить"  Width="80" Margin="5" Click="Add_Click"/>
            <Button Content="Изменить"  Width="80" Margin="5" Click="Update_Click"/>
            <Button Content="Удалить"   Width="80" Margin="5" Click="Delete_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgStudents" Grid.Row="1" Margin="10"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  SelectionChanged="dgStudents_SelectionChanged"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="txtSearch" Width="200" Margin="5"/>
            <Button Content="Поиск по имени" Width="110" Margin="5" Click="Search_Click"/>
            <Button Content="Сорт. по возрасту" Width="140" Margin="5" Click="Sort_Click"/>
            <Button Content="Обновить" Width="80" Margin="5" Click="Refresh_Click"/>
        </StackPanel>
    </Grid>
</Window>