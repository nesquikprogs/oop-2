<Window x:Class="DatabaseLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Lab" Height="450" Width="800">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель ввода -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">

            <!-- Name -->
            <Grid Width="120" Margin="5">
                <TextBox x:Name="txtName" />
                <Label Content="Имя" 
                       Foreground="Gray" 
                       Opacity="0.7" 
                       IsHitTestVisible="False" 
                       VerticalAlignment="Center" 
                       Margin="8,0,0,0"
                       Visibility="{Binding ElementName=txtName, Path=Text.IsEmpty, 
                                            Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>

            <!-- Age -->
            <Grid Width="70" Margin="5">
                <TextBox x:Name="txtAge" />
                <Label Content="Возраст" 
                       Foreground="Gray" 
                       Opacity="0.7" 
                       IsHitTestVisible="False" 
                       VerticalAlignment="Center" 
                       Margin="8,0,0,0"
                       Visibility="{Binding ElementName=txtAge, Path=Text.IsEmpty, 
                                            Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>

            <!-- Grade -->
            <Grid Width="80" Margin="5">
                <TextBox x:Name="txtGrade" />
                <Label Content="Оценка" 
                       Foreground="Gray" 
                       Opacity="0.7" 
                       IsHitTestVisible="False" 
                       VerticalAlignment="Center" 
                       Margin="8,0,0,0"
                       Visibility="{Binding ElementName=txtGrade, Path=Text.IsEmpty, 
                                            Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>

            <!-- Email -->
            <Grid Width="180" Margin="5">
                <TextBox x:Name="txtEmail" />
                <Label Content="Email" 
                       Foreground="Gray" 
                       Opacity="0.7" 
                       IsHitTestVisible="False" 
                       VerticalAlignment="Center" 
                       Margin="8,0,0,0"
                       Visibility="{Binding ElementName=txtEmail, Path=Text.IsEmpty, 
                                            Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>

            <!-- Кнопки -->
            <Button x:Name="btnAdd"    Content="Добавить"    Width="80" Margin="5" Click="btnAdd_Click"/>
            <Button x:Name="btnUpdate" Content="Изменить"    Width="80" Margin="5" Click="btnUpdate_Click"/>
            <Button x:Name="btnDelete" Content="Удалить"     Width="80" Margin="5" Click="btnDelete_Click"/>
        </StackPanel>

        <!-- Таблица данных -->
        <DataGrid x:Name="dgStudents" 
                  Grid.Row="1" 
                  AutoGenerateColumns="True" 
                  Margin="10" 
                  SelectionChanged="dgStudents_SelectionChanged"
                  IsReadOnly="True" />

        <!-- Панель поиска и сортировки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="txtSearchName" Width="180" Margin="5">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background" Value="{x:Null}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <Label Content="Поиск по имени:" 
                   VerticalAlignment="Center" 
                   Margin="5,0"/>

            <Button x:Name="btnSearch"    Content="Найти"      Width="80" Margin="5" Click="btnSearch_Click"/>
            <Button x:Name="btnSortByAge" Content="Сорт. по возрасту" Width="120" Margin="5" Click="btnSortByAge_Click"/>
            <Button x:Name="btnRefresh"   Content="Обновить"   Width="80" Margin="5" Click="btnRefresh_Click"/>
        </StackPanel>
    </Grid>
</Window>